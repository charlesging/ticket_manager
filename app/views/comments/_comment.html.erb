
<div>
  <p>
    "<%= comment.body %>"
  </p>
  <p>
    <i>
      - posted by <%= comment.user.name %>
      <%= time_ago_in_words(comment.created_at) %> ago
      <% if comment_updated?(comment) %>
        - updated <%= time_ago_in_words(comment.updated_at) %> ago
      <% end %>
    </i>
  </p>
</div>

<%= link_to 'Edit', edit_ticket_comment_path(@ticket, comment) %>
